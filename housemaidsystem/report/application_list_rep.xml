<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="application_list_rep">
        <t t-set="data_report_landscape" t-value="True"/>
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="font">
                    <div class="page">
                        <br></br>
                        <div class="text-center">
                            <h3>
                                <strong>Applications List Report</strong>
                            </h3>
                            <br>
                                <small>
                                    <t t-esc="rep_head_line1"/> - <t t-esc="rep_head_line3"/>
                                </small>
                            </br>
                        </div>
                        <br></br>
                        <table class="table table-sm table-hover table-bordered">
                            <thead class="thead-light small">
                                <t t-if="accumulated">
                                    <th colspan="5"> </th>
                                </t>
                                <t t-else="">
                                    <th>SN</th>
                                    <th>Applicant Date</th>
                                    <th>HM Ref</th>
                                    <th>HM Name</th>
                                    <th>Passport</th>
                                </t>

                            </thead>
                            <tbody class="thead-light small">
                                <t t-set="line_num" t-value="1"/>
                                <t t-foreach="docs" t-as="doc">
                                    <t t-if="accumulated == False">
                                        <tr>
                                            <td>
                                                <t t-esc="line_num"/>
                                            </td>
                                            <td>
                                                <t t-raw="doc.applicant_date"/>
                                            </td>
                                            <td>
                                                <t t-esc="doc.external_office_id"/>
                                            </td>
                                            <td>
                                                <t t-esc="doc.full_name"/>
                                            </td>
                                            <td>
                                                <t t-esc="doc.passport_id"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-set="line_num" t-value="line_num+1"/>
                                </t>
                            </tbody>
                            <tfoot class="thead-light small">
                                <tr>
                                    <td colspan="5">
                                        <span>Total of
                                            <span t-esc="line_num - 1"/>
                                            Records
                                        </span>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>