<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="list_reservations">
        <t t-set="data_report_landscape" t-value="True"/>
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="font">
                    <div class="page">
                        <div class="text-center">
                            <h3>
                                <strong><u>Reservations List Report</u></strong>
                            </h3>
                        </div>
                        <table class="table table-sm table-hover table-bordered">
                            <thead>
                                <th>SN</th>
                                <th>Reservation Date</th>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Sponsor Name</th>
                                <th>Invoice</th>
                                <th>Invoice Status</th>
                                <th class="text-right">Deal Amount</th>
                                <th class="text-right">Down Payment</th>
                            </thead>
                            <tbody>
                                <t t-set="line_num" t-value="1"/>
                                <t t-set="tot_deal_amount" t-value="0"/>
                                <t t-set="tot_down_payment_amount" t-value="0"/>
                                <t t-foreach="docs" t-as="doc">
                                    <tr>
                                        <td class="small">
                                            <t t-esc="line_num"/>
                                        </td>
                                        <td class="small">
                                            <t t-raw="doc.reservation_date"/>
                                        </td>
                                        <td class="small">
                                            <t t-esc="doc.application_id.external_office_id"/>
                                        </td>
                                        <td class="small">
                                            <t t-esc="doc.application_id.full_name"/>
                                        </td>
                                        <td class="small">
                                            <t t-esc="doc.customer_id.name"/>
                                        </td>

                                        <td class="small">
                                            <t t-esc="doc.invoice_sales_id.name"/>
                                        </td>
                                        <td class="small">
                                            <t t-esc="doc.invoice_sales_id.state"/>
                                        </td>
                                        <td  class="small" align="right">
                                            <t t-esc="doc.deal_amount"
                                            t-options='{"widget": "float", "decimal_precision": "3"}'/>
                                        </td>
                                        <td  class="small" align="right">
                                            <t t-esc="doc.down_payment_amount"
                                            t-options='{"widget": "float", "decimal_precision": "3"}'/>
                                        </td>
                                    </tr>
                                    <t t-set="line_num" t-value="line_num+1"/>
                                    <t t-set="tot_deal_amount" t-value="tot_deal_amount+doc.deal_amount"/>
                                    <t t-set="tot_down_payment_amount" t-value="tot_down_payment_amount+doc.down_payment_amount"/>
                                </t>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="7">
                                        <span>Total</span>
                                    </td>
                                    <td align="right">
                                        <span t-esc="tot_deal_amount" t-options='{"widget": "float", "decimal_precision": "3"}'/>
                                    </td>
                                    <td align="right">
                                        <span t-esc="tot_down_payment_amount" t-options='{"widget": "float", "decimal_precision": "3"}'/>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>