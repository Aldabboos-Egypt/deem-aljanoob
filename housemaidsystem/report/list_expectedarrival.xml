<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="list_expectedarrival">
        <t t-set="data_report_landscape" t-value="True"/>
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="font">
                    <div class="page">
                        <div class="text-center">
                            <h3>
                                <strong>
                                    <u>Expected Arrival List Report</u>
                                </strong>
                            </h3>
                        </div>
                        <table class="table table-sm table-hover table-bordered">
                            <thead>
                                <th>SN</th>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Expected Arrival Date</th>
                                <th>Sponsor</th>
                                <th>Mobile</th>
                                <th>Telephone</th>
                                <th>Flight No</th>
                                <th>Flight Name</th>
                                <th>Email Date</th>
                            </thead>
                            <tbody>
                                <t t-set="line_num" t-value="1"/>
                                <t t-foreach="docs" t-as="doc">
                                    <tr>
                                        <td class="small">
                                            <t t-esc="line_num"/>
                                        </td>
                                        <td class="small">
                                            <t t-esc="doc.application_id.external_office_id"/>
                                        </td>
                                        <td class="small">
                                            <t t-esc="doc.application_id.full_name"/>
                                        </td>
                                        <td class="small">
                                            <t t-raw="doc.expected_arrival_date"/>
                                        </td>
                                        <td class="small">
                                            <t t-raw="doc.customer_id.name"/>
                                        </td>
                                        <td class="small">
                                            <t t-raw="doc.customer_id.mobile"/>
                                        </td>
                                        <td class="small">
                                            <t t-raw="doc.customer_id.phone"/>
                                        </td>
                                        <td class="small">
                                            <t t-raw="doc.flight_no"/>
                                        </td>
                                        <td class="small">
                                            <t t-raw="doc.flight_name"/>
                                        </td>
                                        <td class="small">
                                            <t t-raw="doc.email_date"/>
                                        </td>

                                    </tr>
                                    <t t-set="line_num" t-value="line_num+1"/>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>