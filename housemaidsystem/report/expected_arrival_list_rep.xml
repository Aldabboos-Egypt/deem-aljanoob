<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="expected_arrival_list_rep">
        <t t-set="data_report_landscape" t-value="True"/>
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="font">
                    <div class="page">
                        <br></br>
                        <div class="text-center">
                            <h3>
                                <strong>Expected Arrival List Report</strong>
                            </h3>
                            <br>
                                <br>
                                <small>
                                    <t t-esc="rep_head_line1"/> - <t t-esc="rep_head_line3"/>
                                </small>
                            </br>
                            </br>
                        </div>
                        <br></br>
                        <table class="table table-sm table-hover table-bordered">
                            <thead class="thead-light small">
                                <t t-if="accumulated">
                                    <th colspan="9"> </th>
                                </t>
                                <t t-else="">
                                    <th>SN</th>
                                    <th>Expected Arrival Date</th>
                                    <th>External Code</th>
                                    <th>HM Name</th>
                                    <th>Passport</th>
                                    <th>Sponsor Name(En)</th>
                                    <th>Sponsor Name(Ar)</th>
                                    <th>Sponsor Mobile</th>
                                    <th>Flight Number</th>
                                    <th>User Name</th>
                                </t>

                            </thead>
                            <tbody class="thead-light small">
                                <t t-set="line_num" t-value="1"/>
                                <t t-foreach="docs" t-as="doc">
                                    <t t-if="accumulated == False">
                                        <tr>
                                        <td>
                                            <t t-esc="line_num"/>
                                        </td>
                                        <td>
                                            <t t-esc="doc.expected_arrival_date.strftime('%Y-%m-%d %H:%M:%S')"/>

                                        </td>
                                        <td>
                                            <t t-esc="doc.application_id.external_office_id"/>
                                        </td>
                                        <td>
                                            <t t-esc="doc.application_id.full_name"/>
                                        </td>
                                        <td>
                                            <t t-esc="doc.application_id.passport_id"/>
                                        </td>
                                        <td>
                                            <t t-esc="doc.customer_id.name"/>
                                        </td>
                                            <td>
                                            <t t-esc="doc.customer_id.name_ar"/>
                                        </td>
                                        <td>
                                            <t t-esc="doc.customer_id.mobile"/>
                                        </td>
                                        <td>
                                            <t t-esc="doc.flight_no"/>
                                        </td>
                                        <td>
                                            <t t-esc="doc.write_uid.name"/>
                                        </td>
                                    </tr>
                                    </t>
                                    <t t-set="line_num" t-value="line_num+1"/>
                                </t>
                            </tbody>
                            <tfoot class="thead-light small">
                                <tr>
                                    <td colspan="9">
                                        <span>Records Count
                                            <span t-esc="line_num - 1"/>
                                            Records
                                        </span>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>